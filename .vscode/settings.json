{
  "files.exclude": {
    "**/node_modules": true
  },
  "editor.formatOnSave": true,
  "python.pythonPath": "./backend/.venv/bin/python",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length=99"
  ],
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  }
}